<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="415dp"
        android:layout_height="276dp"
        android:layout_marginBottom="61dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138"
        app:srcCompat="@mipmap/ic_launcher_top_bg_foreground" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="322dp"
        android:layout_height="358dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/viewCourse"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_menu_book_24df"
            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="View Courses"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/yourCourse"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_bookmarks_24book"
            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="Your Courses"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/viewQuizzes"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_checklist_rtl_24ceck"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:text="View Quizzes"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/addblog"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_post_add_24pp"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:text="Add blog"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/viewBlog"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_bookmarks_24book"
            android:paddingStart="5sp"
            android:paddingTop="5sp"
            android:text="View blog"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/Saccount"
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="16sp"
            android:layout_marginRight="30sp"
            android:background="@drawable/btn2"

            android:drawableStart="@drawable/ic_baseline_account_box_24"
            android:paddingStart="5sp"
            android:paddingTop="8sp"
            android:text="Your account"
            android:textAlignment="center"
            android:textColor="@color/Pcolor"
            android:textSize="24sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="218dp"
        android:layout_height="168dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/get_started" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/oswald"
        android:text=""
        android:textColor="@color/pgrey"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803" />


</androidx.constraintlayout.widget.ConstraintLayout>